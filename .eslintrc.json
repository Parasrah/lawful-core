{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-use-before-define": "off"
  },
  "globals": {
    "game": "writable",
    "Hooks": "readonly"
  }
}
