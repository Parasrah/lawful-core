{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "globals": {
    "game": "writable",
    "Hooks": "readonly"
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-use-before-define": "off",
    "prefer-promise-reject-errors": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.d.ts"
      ],
      "rules": {
        "no-dupe-class-members": "off"
      }
    }
  ]
}
